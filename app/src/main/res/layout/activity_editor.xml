<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/activity_editor"
    android:background="#fff">

    <LinearLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="513dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="6dp">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fancy:srcCompat="@drawable/ic_ok" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/saved_successfully"
            android:textColor="#000"
            android:textSize="50sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginStart="0dp"
        android:layout_marginTop="479dp"
        android:layout_marginBottom="56dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_marginLeft="0dp"
        android:layout_alignParentLeft="true">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/sharePic"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            android:onClick="shareImage"
            android:padding="12dp"
            fancy:fb_defaultColor="#77da8b"
            fancy:fb_focusColor="#3abf8a"
            fancy:fb_iconPosition="left"
            fancy:fb_text="@string/share"
            fancy:fb_textColor="#fff" />
    </LinearLayout>

</RelativeLayout>